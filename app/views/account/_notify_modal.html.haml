#myModal.modal.hide.fade{:style => "display: none; width:auto;"}
  .modal-header
    %a.close{"data-dismiss" => "modal"} &times;
    %h3= t('notify.notify')
  .modal-body
    %p
      = t('notify.message')
    = form_tag paid_notify_index_path do
      = label_tag :bank_name, t('notify.bank_name')
      = text_field_tag :bank_name
      = label_tag :bank_account_num, t('notify.bank_number')
      = text_field_tag :bank_account_num
      = label_tag :accunt_name, t('notify.account_name')
      = text_field_tag :accunt_name
      = hidden_field_tag :order_id, ""
      %br
      = submit_tag "確定", class: "btn"
      = link_to "取消","","data-toggle" => "modal", 'data-target' => "#myModal", class: "btn"