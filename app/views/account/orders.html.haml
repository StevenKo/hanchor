.col-md-3
  = render partial: "account_sidemenu"
  = render partial: "products/cart_sidebar"
.col-md-9
  #account_main
    %h2= t('account.order')
    %p= t('account.message').html_safe
  #last_order
    %fieldset
      %legend= t('order.history')
      %br
    %table.table.table-striped
      %thead
        %tr
          %th= t('order.num')
          %th= t('order.date')
          %th= t('order.status')
          %th= t('order.shpping')
          %th= t('order.pay')
          %th= t('order.price')
          %th{:align => "center", :width => "70"}= t('order.confirm')
      %tbody
        - current_user.orders.each do |order|
          %tr.hover
            %td= format_order_id(order)
            %td= display_date(order.created_at)
            %td= t("order.#{order.status}")
            %td= order.shipping_cost.description
            %td= order.payment
            %td= order.total
            -if (order.is_payed)
              %td= t("order.payed")
            -else
              %td= link_to t("notify.notify"),"","data-toggle" => "modal", 'data-target' => "#myModal", class: "btn btn-md btn-warning", data: {order_id: order.id}

= render "notify_modal"