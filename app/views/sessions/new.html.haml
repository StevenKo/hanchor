=content_for :head do
  <meta name="description" content="#{t("account.club_login")}">
  <title>HANCHORï½œ#{t("account.club_login")}</title>

#account
  .acc-box
    %fieldset
      %legend= t('account.add_club')
    #{t('account.register_messgae')}
    %br
    %br
    - if params[:cart]
      = link_to t('account.register'),register_path(cart: "index"), class: 'btn btn-md btn-warning'
    - else
      = link_to t('account.register'),register_path, class: 'btn btn-md btn-warning'
  .acc-box
    %fieldset
      %legend= t('account.club_login')
    = form_tag '/login' do
      .field.clearfix
        = label_tag :user_name, t('account.email').html_safe, class: 'pull-left login-item'
        = text_field_tag :username, nil, class: 'form-control pull-left login-field'
      .field.clearfix
        = label_tag :password, t('account.password').html_safe, class: 'pull-left login-item'
        = password_field_tag :password, nil, class: 'form-control pull-left login-field'
      = hidden_field_tag "redirect_to_cart", true if params[:cart]
      .submit
        = submit_tag t('sign_in'), class: 'btn btn-md btn-warning pull-right'
        = link_to t('account.forget_password'),forget_password_path, class: 'btn btn-md pull-right'