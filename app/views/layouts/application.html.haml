<!doctype html>
%html{lang: params[:locale]}
  %head
    %meta{:charset => "utf-8"}
    %link{rel: "alternate", hreflang: "x-default", href: "#{request.url.split('?').first}"}
    %link{rel: "alternate", hreflang: "en", href: url_for(params.merge(:only_path => false, locale: "en"))}
    %link{rel: "alternate", hreflang: "zh-TW", href: url_for(params.merge(:only_path => false, locale: "zh-TW"))}
    %link{rel: "canonical", href: "#{request.url.split('?').first}"}
    / %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %meta{:content => t('key_words'), :name => "keywords"}
    %meta{:content => "www.hanchor.com", :name => "author"}
    %meta{:content => "356939360986455", :property => "fb:app_id"}
    %meta{content: "B8bPUVgj7JcuDMB3rFWoL-RvX3g1hnX6xWG0lfAl7fs", name: "google-site-verification"}/
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = favicon_link_tag "favicon.jpg"
    = csrf_meta_tags
    = yield(:head)
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-36562128-1', 'hanchor.com');
      ga('send', 'pageview');
  %body
    = render "shared/facebook_script"
    %header
      .nav-full
        = render 'layouts/navigation'
    #main{:role => "main"}
      .container
        .row.clearfix
          #messages
            = render 'layouts/messages'
          = yield
    %footer
      = render 'layouts/footer'