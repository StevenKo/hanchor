.main-product.pull-left
  %ul.breadcrumb
    %li
      = link_to t('product.home'), root_path 
    %li.active
      = t("product.product")
    %li
      = link_to @base_category.locale(params[:locale]), products_index_path(@base_category.name_en)
    %li
      - if @sub_category
        = link_to @sub_category.locale(params[:locale]), products_index_path(@base_category.name_en, sub: @sub_category.name_en)
  .product_cate
    - @base_category.child_categories.each do |c|
      = link_to c.locale(params[:locale]), products_index_path(@base_category.name_en, sub: c.name_en), class: "btn btn-sm btn-category"
  #product-list
    - @products.each do |product|
      =link_to products_show_path(@base_category.name_en,product) do
        .product_thumbs
          %center
            =(image_tag product.thumb.pic_url) if product.thumb
          .p-name
            = product.name
          .p-price
            - unless product.special_price
              %span.price
                NT$
                = product.price
            - else
              %span.kill_price
                NT$
                = product.price
              %span.special_price
                NT$
                = product.special_price
          .p-overview
            = truncate_html(strip_tags(product.quick_overview), length: 60)
  
  = will_paginate(@products, :renderer => 'BootstrapPaginationHelper::LinkRenderer')
  %ul.pagination
    %li
      - if @sub_category
        = link_to "View All",products_index_path(@sub_category.name_en,all: true)
      - else
        = link_to "View All",products_index_path(@base_category.name_en,all: true)

.sidebar-product.pull-left
  = render "cart_sidebar"

