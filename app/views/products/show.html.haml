.span7
  %ul.breadcrumb
    %li
      = link_to "首頁", root_path 
      %span.divider /
    %li.active
      產品
      %span.divider /
    %li
      = link_to @base_category.name, products_index_path(@base_category.name_en)
    %li
      - if @sub_category != @base_category
        %span.divider /
        = link_to @sub_category.name, products_index_path(@base_category.name_en, sub: @sub_category.name_en)

  #product
    .pic
      =link_to image_tag(@product.product_pics.first.pic_url,:style => "max-width:300px"),@product.product_pics.first.pic_url, rel: "group"
      %fieldset
        %legend 更多圖片
      %p{:style => "text-align:left"}
        - @product.product_pics.each_with_index do |pic, index|
          = link_to image_tag(pic.pic_url,:style => "max-width:300px"),pic.pic_url, rel: "group" if index >0
        
    .info
      %h2 SCHIST Small
      = form_for @item, url: add_item_to_cart_cart_index_path(product: @product) do |f|
        %ul
          %li 重量: 285公克
          %li 
            尺寸: 30公分*22公分*10公分
            = f.select :product_size_id, [["L",1],["M",2]]
          %li 材質: CORDURA 420D/ X-Pac VX21
          %li
            顏色:
            = f.select :product_color_id, [["卡其(KHAKI)",1],["藍(BLUE)",2]]
          %li
            價格:
            %strong NT$2280
          %li
            數量:
            = f.select :quantity, [[1,1],[2,2]]
        = f.submit "放進購物車"
  .clearfix
  .features
    %fieldset
      %legend 產品說明
    %p
      = @product.product_infos[@product_info_index].feature.html_safe
  .quick_overview
    %fieldset
      %legend 描述與使用
    = @product.product_infos[@product_info_index].quick_overview.html_safe

.span3.offset1
  = render "cart_sidebar"