.span7
  %ul.breadcrumb
    %li
      = link_to t('product.home'), root_path 
      %span.divider /
    %li.active
      = t("product.product")
      %span.divider /
    %li
      = link_to @base_category.locale(params[:locale]), products_index_path(@base_category.name_en)
    %li
      - if @sub_category != @base_category
        %span.divider /
        = link_to @sub_category.locale(params[:locale]), products_index_path(@base_category.name_en, sub: @sub_category.name_en)

  #product
    .pic
      =link_to image_tag(@product.product_pics.first.pic_url,:style => "max-width:300px"),@product.product_pics.first.pic_url, rel: "group"
      %fieldset
        %legend= t('product.more_views')
      %p{:style => "text-align:left"}
        - @product.product_pics.each_with_index do |pic, index|
          = link_to image_tag(pic.pic_url,:style => "max-width:300px"),pic.pic_url, rel: "group" if index >0
        
    .info
      %h2= @product.product_infos[@product_info_index].name
      = form_for @item, url: add_item_to_cart_cart_index_path(product: @product) do |f|
        %ul
          %li 
            #{t('product.weight')} 
            #{@product.product_infos[@product_info_index].weight}
          %li
            #{t('product.dimension')}
            #{@product.product_infos[@product_info_index].capacity}
          - if @product_size_selector.present?
            %li
              #{t('product.size')}
              = f.select :product_size_id, @product_size_selector
          %li
            #{t('product.material')}
            #{@product.product_infos[@product_info_index].material}
          - if @product_color_selector.present?
            %li
              #{t('product.color')}
              = f.select :product_color_id, @product_color_selector
          %li
            #{t('product.regular_price')}
            %strong= "NT$#{@product.product_infos[@product_info_index].price}"
          %li
            #{t('product.quantity')}
            - if @product.sum_quantities > 0
              = select_tag :quantity,[]
            -else
              %strong 目前已完售
        - if @product.sum_quantities > 0    
          = f.submit t('product.add_to_cart')
  .clearfix
  .features
    %fieldset
      %legend= "#{t('product.feature')}"
    %p
      = @product.product_infos[@product_info_index].quick_overview.html_safe
  .quick_overview
    %fieldset
      %legend= "#{t('product.description')}"
    = @product.product_infos[@product_info_index].feature.html_safe

.span3.offset1
  = render "cart_sidebar"