%section.register.container
  .row
    .span10
      = bootstrap_form_for video, url: url,:html => {:class => "form-horizontal", multipart: true} do |f|
        = f.text_field :link, :class => "span7", label: "連結"
        = f.text_field :sort, :class => "span7", label: "排序(數字越大，排序越前面)"
        = f.secondary "確定"
        = link_to "返回", admin_videos_path, class: "btn"
        - unless video.new_record?
          = link_to "刪除", admin_video_path(video), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
