= form_for @pic, url: admin_product_product_pic_path(@product,@pic) do |f|
  - if @pic.errors.any?
    #error_explanation
      %h2
        = pluralize(@pic.errors.count, "error")
        prohibited this pic from being saved:
      %ul
        - @pic.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :description
    %br/
    = f.text_field :description
  %p
    = f.file_field :pic
  .actions
    = f.submit