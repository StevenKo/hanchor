%section.register.container
  .row
    .span10
      = form_for :sizes, url: create_update_admin_product_product_sizes_path(@product),:html => {:class => "form-horizontal", multipart: true} do |f|
        - @sizes.each do |size_item|
          = f.fields_for size_item, index:  size_item.id do |builder|
            = render "product_size_form", :builder => builder, :size => size_item, :product => @product
        = link_to_add_fields "新增", f, "product_size"
        
        %br
        %br
        .offset2
          = f.submit "確定", class: "btn"
          = link_to "返回", edit_admin_product_path(@product), class: "btn"