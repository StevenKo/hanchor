.checkout
  .row
    .col-md-12
      %fieldset
        %legend= t('cart.info')
      = bootstrap_form_for @order, url: orders_path, role: "form" do |f|
        = f.text_field :shipping_name, :class => "form-control", label: t('cart.user_name'), value: @current_user.name
        = f.text_field :phone, :class => "form-control", label: t('cart.phone'), value: @current_user.phone
        = f.text_field :shipping_address, :class => "form-control", label: t('cart.address'), value: @current_user.shipping_address
        = f.text_field :zip_code, :class => "form-control", label: t('cart.zip_code'), value: @current_user.zip_code
        = f.text_field :city, :class => "form-control", label: t('cart.city'), value: @current_user.city
        = f.text_field :state, :class => "form-control", label: t('cart.state'), value: @current_user.state
        = f.text_field :country, :class => "form-control", label: t('cart.country'), value: @current_user.country
        = f.select  :shipping_cost_id, @shippings_selector, label: t('cart.shipping')
        - if @country_id == 1
          #store
            %label= t('cart.store')
            = link_to t('cart.search_store'),'http://map.ezship.com.tw/', class: "btn", target: "_blank"
            = f.fields_for :store do |child_form|
              = child_form.text_field :code, label: t('cart.num')
              = child_form.text_field :stroe_name, label: t('cart.store_name')
        %fieldset
          %legend= t('cart.payment_info')
        %p
          %em.tw_payment{:style => "font-style: normal;"}
            %span{:style => ""}
            %br{:style => ""}
              = f.radio_button :payment, "PayPal",checked: true
              = f.label t('cart.credit_card')
              %img{:alt => "Solution Graphics", :border => "0", :src => "https://www.paypal.com/en_US/i/bnr/horizontal_solution_PPeCheck.gif"}

              %br{:style => ""}
              -if @country_id == 1
                = f.radio_button :payment, t('cart.transfer')
                = f.label t('cart.transfer_bank')
                %span.ui-state-default.ui-corner-all{:style => "padding: 5px;"}
                  %strong> 銀行
                  或
                  %strong> ATM匯款
                  (請於匯款後點選
                  %span.ui-button.ui-state-hover
                    通知匯款
                  以利盡快出貨)

        %fieldset
          %legend= t('cart.comment')
        %p
          = text_area_tag :memo, nil, :style => "width:500px;height:100px;"
        %br
        %br
        %span.ui-state-default.ui-corner-all{:style => "padding:5px;mpargin: 5px;"}
          = t("cart.read_shopping_gudide_message", :href => link_to(t("cart.shopping_guide"), shopping_guide_path)).html_safe
        %fieldset
          %legend= t('cart.order')
        #order-overview
          %table.table.table-striped.cart_table
            %thead
              %tr
                %td= t('cart.picture')
                %td= t('cart.name')
                %td= t('cart.unit_price')
                %td= t('cart.size')
                %td= t('cart.color')
                %td= t('cart.quantity')
                %td= t('cart.subtotal')
            %tbody
              - @cart_items.each_with_index do |item, i|
                %tr
                  %td
                    = link_to products_show_path(@cart_products[i].product_category.name_en, @cart_products[i]) do
                      =image_tag @cart_products[i].thumb.pic_url, width: "90",border: 0
                  %td
                    = link_to @cart_products[i].name,products_show_path(@cart_products[i].product_category.name_en, @cart_products[i])
                    = link_to remove_cart_item_cart_index_path(item_id: item.id) do
                      = image_tag("fancy_close.png")
                  %td
                    NT$
                    = item.price
                  %td
                    = item.product_size.locale_size(params[:locale]) if item.product_size
                  %td
                    = item.product_color.locale_color(params[:locale]) if item.product_color
                  %td
                    = item.quantity
                  %td
                    NT$
                    = item.price * item.quantity
              %tr
                %td{:colspan => "6", :class => "total"}= t('cart.sum')
                %td.total-price
                  NT$
                  = sum_cart_items_price @cart_items
        .func-btn.clearfix
          = f.submit t('cart.confirm'), class: "btn btn-md btn-success pull-right", :confirm => t('cart.confirm_message')